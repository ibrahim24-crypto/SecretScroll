rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isAdmin() {
      // Check role in DB OR if email matches the hardcoded admin email.
      return request.auth != null && 
             (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' || 
              request.auth.token.email == 'ibrahimezzine09@gmail.com');
    }
  
    // Users can only be created. No one can read other user docs directly for privacy.
    // Admins can update roles.
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if request.resource.data.uid == request.auth.uid;
      allow update: if isAdmin();
    }

    // Admins can update/delete. Logged-in users can update vote counts.
    match /posts/{postId} {
      allow read: if true;
      allow create: if true;
      // Admins can update anything.
      // Authenticated users can ONLY update upvotes and downvotes.
      allow update: if isAdmin() || (
        request.auth != null &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['upvotes', 'downvotes'])
      );
      allow delete: if isAdmin();
    }
    
    // Votes can be created, updated, or deleted by the user who owns them.
    match /votes/{voteId} {
      allow read, write: if isOwner(request.resource.data.userId);
    }

    match /comments/{commentId} {
      allow read: if true;
      // Anyone can create a comment, as long as it's not empty and reasonably short.
      allow create: if request.resource.data.content != null 
                    && request.resource.data.content.size() > 0
                    && request.resource.data.content.size() < 500;
      // Only the comment author or an admin can delete a comment.
      allow delete: if isOwner(resource.data.userId) || isAdmin();
    }

    // Settings can only be read and written by admins.
    match /settings/{settingId} {
      allow read, write: if isAdmin();
    }
  }
}
