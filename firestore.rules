rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Users can only read public profiles, but can write to their own.
    match /users/{userId} {
      allow read: if true;
      allow create, update: if request.auth != null && request.auth.uid == userId;
    }

    // Posts can be read by anyone, but only created by logged-in users.
    // Only the author or an admin can update or delete a post.
    match /posts/{postId} {
      allow read: if resource.data.status == 'approved';
      allow create: if request.auth != null;
      allow update: if request.auth != null && (request.auth.uid == resource.data.authorUid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      allow delete: if request.auth != null && (request.auth.uid == resource.data.authorUid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }
    
    // Votes can be created, updated, or deleted by the user who owns them.
    match /votes/{voteId} {
      allow read, write: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Allow admins to read pending/rejected posts for moderation
    match /posts/{postId} {
      allow read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
  }
}
