rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {

      // Anyone can read
      allow read: if true;

      // Anyone can create or update
      allow create, update: if true;

      // Only YOU can delete
      allow delete: if request.auth != null
                    && request.auth.uid == "BjwgEXkn4fOY9YRcYUQaphoXNw72";
    }
  }
}
